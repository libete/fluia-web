# ============================================
# FLUIA - Plataforma de Cuidado Emocional Perinatal
# Environment Variables
# ============================================
# Copie este arquivo para apps/web/.env.local e preencha os valores

# --------------------------------------------
# Firebase Client (públicas - NEXT_PUBLIC_)
# --------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=fluia-c3f93.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=fluia-c3f93
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=fluia-c3f93.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# --------------------------------------------
# Firebase Admin (privadas - apenas servidor)
# --------------------------------------------
# Opção 1: Caminho para o arquivo JSON da service account
FIREBASE_ADMIN_SERVICE_ACCOUNT_PATH=./service-account.json

# Opção 2: Variáveis individuais (usar em produção/Vercel)
# FIREBASE_ADMIN_PROJECT_ID=fluia-c3f93
# FIREBASE_ADMIN_CLIENT_EMAIL=
# FIREBASE_ADMIN_PRIVATE_KEY=

# --------------------------------------------
# Aplicação
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --------------------------------------------
# Sessão
# --------------------------------------------
SESSION_COOKIE_NAME=__session
SESSION_MAX_AGE_DAYS=90
